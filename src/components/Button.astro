---
const { href, className, name } = Astro.props;
---

<a href={href} class={className}>{name}</a>

<style>
  a {
    min-width: 175px;
    display: block;
    position: relative;
    text-align: center;
    width: max-content;
    text-decoration: none;
    color: var(--yellow);
    text-transform: uppercase;
    padding: 10px;
    font-size: 14px;
    border: 1px solid var(--dark-blue);
    z-index: 1;
    transition:
      color 0.45s cubic-bezier(0.785, 0.135, 0.15, 0.86),
      border 0.45s cubic-bezier(0.785, 0.135, 0.15, 0.86);

    &::before {
      background-color: var(--dark-blue);
      position: absolute;
      content: "";
      display: block;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      transform: scale(1);
      transform-origin: left center;
      z-index: -1;
      transition: transform 0.45s cubic-bezier(0.785, 0.135, 0.15, 0.86);
    }

    &:hover {
      color: var(--dark-blue);
      &::before {
        transform-origin: right center;
        transform: scaleX(0);
      }
    }
  }
</style>
