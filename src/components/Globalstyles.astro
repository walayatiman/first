<style is:global>
  :root {
    --creame: #f4d1b3;
    --dark-blue: #16243d;
    --yellow: #fcc155;
  }

  @font-face {
    font-family: "Hey"; /* Name of the font */
    src: url("../assets/fonts/HeyComic.ttf") format("ttf");
    font-weight: normal; /* Optional: Specify the font weight */
    font-style: normal; /* Optional: Specify the font style */
  }

  @font-face {
    font-family: "High"; /* Name of the font */
    src: url("../assets/fonts/HighmanTrial.otf") format("opentype");
    font-weight: normal; /* Optional: Specify the font weight */
    font-style: normal; /* Optional: Specify the font style */
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "High", sans-serif; /* Fallback to sans-serif */
  }

  h1 {
    font-size: clamp(1.125rem, -1.375rem + 8vw, 3.125rem);
  }

  h2 {
    font-size: clamp(1.0625rem, -0.7344rem + 5.75vw, 2.5rem);
  }

  h3 {
    font-size: clamp(1rem, -0.4844rem + 4.75vw, 2.1875rem);
  }

  h4 {
    font-size: clamp(0.9375rem, -0.2344rem + 3.75vw, 1.875rem);
  }

  h5 {
    font-size: clamp(0.875rem, 0.0156rem + 2.75vw, 1.5625rem);
  }

  h6 {
    font-size: clamp(0.875rem, 0.7188rem + 0.5vw, 1rem);
  }

  body {
    font-family: "Hey", sans-serif;
  }

  .container {
    max-width: 1280px;
    margin-inline: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }
</style>
